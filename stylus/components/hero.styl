
header
  height: 100px;
  background: #fff;
  z-index: 100;
  display: flex;
  justify-content: center;

.hero
    height: 100vh
    background-color: #fc758c
    color: #fff
    justify-content: center
    align-items: center
    display: flex
    flex-direction: column

.hero__container
    margin: 0 2rem
    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-between

.hero__title
    letter-spacing: 10px
    text-align: center
    margin-bottom: 50px
    font-size: 40px
    font-weight: bold

.hero__description
    font-size: 16px
    letter-spacing: 3px
    max-width: 620px
    text-align: center
    margin-bottom: 60px
    line-height: 1.6

.hero__button
    font-size: 12px
    color: #fc758c
    background-color: #fff
    padding: 15px 50px
    letter-spacing: 3px

h1, p
    margin: 0
    padding: 0
    border: 0
    font-size: 100%
    font: inherit
    vertical-align: baseline
@import url("https://fonts.googleapis.com/css2?family=Montserrat&family=Questrial&display=swap");
@import "./components/hamburguer";
@import "./components/nav";
@import "./components/hero"
@import "./components/portfolio"
@import "./components/footer"
@import "./components/portfolioContainer"


* 
	box-sizing: border-box;
	margin: 0px;
	padding: 0px;


body 
	font-family: 'Montserrat', 'Questrial', sans-serif;

a
	:hover
		text-decoration: none

@media (max-width: 1024px)
	.header
		position:fixed
		height: 100vh
		left: 100vw
		transition: all 400ms ease-out
		height: 100vh
		justify-content: center
		align-items: center

	.head-activate
		display: flex
		left: 0
		transition: all 400ms ease-out

	.navbar
		flex-direction: column

	.logo
		margin-bottom: 10px
	
	.nav
		justify-content: space-evenly
		flex-direction: column
		align-items: center
		width: 100vw
		margin: 0
	
	.hamburger
		display: block

	.portfolio__container-unplash
		margin: 0 1rem 3rem
		grid-gap: .6rem
	
	.icon__search
		margin: 0

	.search
		margin-top: 3rem
		margin-bottom: 20vh